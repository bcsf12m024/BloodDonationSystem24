@{
    ViewBag.Title = "EditProfile";
}
@model BootstrapPractice.Models.User
           
<div class="donor-info-margin-left">
    <div class="col-md-3">
        <img class="pull-right" src="~/Files/@Model.imagePath" style=" width:100% ; height:auto" />
    </div>
</div><br/><br /><br /><br /><br /><br /><br /><br />
<div style="margin-left: 11%">@using (Html.BeginForm("EditUser", "User", FormMethod.Post, new{@class="form-group"}))
{
             
    @Html.HiddenFor(m => m.id)<br /><br />

    <div class="form-group">
        @Html.LabelFor(m => m.name)
        @Html.EditorFor(m => m.name , new{@class="form-control"})
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.email)
        @Html.EditorFor(m => m.email , new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.password)
        @Html.EditorFor(m => m.password , new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.city)
        @Html.EditorFor(m => m.city , new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.country)
        @Html.EditorFor(m => m.country, new { @class = "form-control" })<br /><br />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.role)
        @Html.EditorFor(m => m.role , new{@class="form-control"})<br /><br />
        </div>
        <input type="submit" class="btn btn-danger" />
        }
    </div>
